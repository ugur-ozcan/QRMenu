@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Listesi</h3>
            <div class="float-end">
                <button type="button" class="btn btn-primary" onclick="showAddUserModal()">
                    <i class="fas fa-plus"></i> Yeni Kullanıcı
                </button>
            </div>
        </div>
        <div class="card-body">
            <table id="usersTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Ad Soyad</th>
                        <th>Rol</th>
                        <th>Durum</th>
                        <th>Son Giriş</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/Admin/GetUsers',
                    type: 'GET'
                },
                columns: [
                    { data: 'email' },
                    { data: 'fullName' },
                    { data: 'role' },
                    {
                        data: 'isActive',
                        render: function(data) {
                            return data ? '<span class="badge bg-success">Aktif</span>' :
                                        '<span class="badge bg-danger">Pasif</span>';
                        }
                    },
                    {
                        data: 'lastLoginDate',
                        render: function(data) {
                            return data ? moment(data).format('DD.MM.YYYY HH:mm') : '';
                        }
                    },
                    {
                        data: null,
                        render: function(data) {
                            return `
                                <button class="btn btn-sm btn-primary" onclick="editUser(${data.id})">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteUser(${data.id})">
                                    <i class="fas fa-trash"></i>
                                </button>
                            `;
                        }
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                }
            });
        });
    </script>
}