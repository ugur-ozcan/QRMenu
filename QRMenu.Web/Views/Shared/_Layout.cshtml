<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QR Menu Admin</title>
    <!-- CSS Dosyaları -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/drezon.css" />
</head>
<body>
    <div class="wrapper d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header p-3">
                <img src="~/img/logo.png" alt="QR Menu" class="img-fluid" />
                <h4>QR Menu Admin</h4>
            </div>
            <ul class="list-unstyled components">
                <li><a href="@Url.Action("Dashboard", "Admin")"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="@Url.Action("Dealers", "Admin")"><i class="fas fa-store"></i> Bayiler</a></li>
                <li><a href="@Url.Action("Companies", "Admin")"><i class="fas fa-building"></i> Firmalar</a></li>
                <li><a href="@Url.Action("Themes", "Admin")"><i class="fas fa-paint-brush"></i> Temalar</a></li>
                <li><a href="@Url.Action("Index", "Logs")"><i class="fas fa-history"></i> Loglar</a></li>
            </ul>
        </nav>

        <!-- Content -->
        <div id="content" class="w-100">
            <nav class="navbar navbar-light bg-light shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-dark" id="sidebarToggle"><i class="fas fa-bars"></i></button>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="profileDropdown" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> Profil
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profilim</a></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item">Çıkış Yap</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JS Dosyaları -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/drezon.js"></script>
</body>
</html>
